---
import WhatsAppIcon from "../icons/social_media/WhatsAppIcon.astro";

interface Props {
    phoneNumber: string;
    message?: string;
}

const {
    phoneNumber,
    message = "Hola, necesito más información",
} = Astro.props;
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---

<a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="fixed bottom-6 right-6 bg-green-500 hover:bg-green-600 text-white rounded-full p-4 shadow-lg transition-all duration-300 ease-in-out hover:scale-110"
>
    <WhatsAppIcon 
        classNameStyles="w-6 h-auto"
    />
</a>
