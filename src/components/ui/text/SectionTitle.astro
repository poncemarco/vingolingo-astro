---
interface Props{
    title: string;
    description: string | null;
}

const {title, description}: Props = Astro.props;
---

<div class="grid gap-8">
    <div class="flex flex-col justify-center">
        <h1 class="text-4xl font-bold text-center text-gray-800 dark:text-white">{title}</h1>
        <p class="my-4  mx-2 text-center text-gray-600 text-sm dark:text-gray-100">{description}</p>
    </div>
</div>