
---
import { ContactInfo } from "@/consts/contacts.ts"

const { email, phone, phoneDisplay } = ContactInfo

---
<footer class="bg-primary dark:bg-gray-900">
    <div class="mx-auto w-full max-w-screen-2xl p-4 py-6 lg:py-8">
        <div class="md:flex md:justify-between">
            <div class="mb-6 md:mb-0">
                <a href="https://flowbite.com/" class="flex items-center">
                    <img src="/logo_horizontal.png" class="w-1/3 me-3" alt="FlowBite Logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"></span>
                </a>
            </div>
            <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
                <div>
                    <h2 class="mb-6 text-sm font-semibold text-gray-100 uppercase dark:text-white">Contáctanos</h2>
                    <ul class="text-gray-200 dark:text-gray-400 font-medium">
                        <li class="mb-4">
                            <a href={`tel:+52${phone}`} class="hover:underline">Teléfono</a>
                        </li>
                        <li class="mb-4">
                            <a href=`mailto:${email}` class="hover:underline">Mail</a>
                        </li>
                        <li>
                            <a href=`https://wa.me/52${phone}`>Whatsapp</a>
                        </li> 
                    </ul>
                </div>
                <div>
                    <h2 class="mb-6 text-sm font-semibold text-gray-100 uppercase dark:text-white">Redes</h2>
                    <ul class="text-gray-200 dark:text-gray-400 font-medium">
                        <li class="mb-4">
                            <a href="https://github.com/themesberg/flowbite" class="hover:underline ">Facebook</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h2 class="mb-6 text-sm font-semibold text-gray-100 uppercase dark:text-white">Legal</h2>
                    <ul class="text-gray-200 dark:text-gray-400 font-medium">
                        <li class="mb-4">
                            <a href="#" class="hover:underline">Política de Privacidad</a>
                        </li>
                        <li>
                            <a href="#" class="hover:underline">Términos y Condiciones</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <div class="sm:flex sm:items-center sm:justify-between">
            <span class="text-sm text-gray-200 sm:text-center dark:text-gray-400">© 2023 <a href="https://flowbite.com/" class="hover:underline">Vingolingo</a>. Todos los derechos reservados.
            </span>
        </div>
    </div>
</footer>
